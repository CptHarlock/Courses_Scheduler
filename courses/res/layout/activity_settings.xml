<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iiio"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/myScreen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/bcc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Backgroud Colour"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/mySeekingBar_R"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="255" />

        <SeekBar
            android:id="@+id/mySeekingBar_G"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="255" />

        <SeekBar
            android:id="@+id/mySeekingBar_B"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="255" />

        <TextView
            android:id="@+id/fcc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Text Colour"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/text_R"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="0" />

        <SeekBar
            android:id="@+id/text_G"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="0" />

        <SeekBar
            android:id="@+id/text_B"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="0" />

        <TextView
            android:id="@+id/fcc1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Text Font"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Default" >
            </RadioButton>

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Advert-Regular" >
            </RadioButton>

            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kberry" >
            </RadioButton>
        </RadioGroup>
            <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="save"
        android:text="Save" >

    </Button>
    </LinearLayout>

</ScrollView>